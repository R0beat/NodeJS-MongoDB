:root
    --CRIMSON: #DC143C
    --WHITE: #FFFFFF
    --SALMON: #FA8072 
    --CRIMSON-L: rgba(250, 128, 114,0.5)
#navbar
    background-color: var(--CRIMSON) !important
a
    &.navbar-brand
        color: var(--WHITE) !important
        &:hover
            color: var(--SALMON) !important
.boton
    border-color var(--CRIMSON)
    color var(--CRIMSON)
    &:hover
        background-color var(--CRIMSON)
        color var(--WHITE)
        border-color var(--SALMON)
.card
    
     var(--CRIMSON-L) !important
input
    &.form-control
        &:focus
            color var(--CRIMSON-L) !important
